# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit?' -B 'Yes!' 'i3-msg exit'"
# screenshoot
bindsym $mod+Shift+s --release exec "scrot -s -e 'xclip -selection clipboard -t image/png < $f'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        #bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

set $mode_gaps Gaps (hl/HL) horizontal minus/plus 10/50 (jk) vertical minus/plus 10/50 (i/I) inner minus/plus 10

mode "$mode_gaps" {
    bindsym h gaps horizontal current minus 10
    bindsym l gaps horizontal current plus 10
    bindsym k gaps vertical current plus 10
    bindsym j gaps vertical current minus 10

    bindsym Shift+h gaps horizontal current minus 50
    bindsym Shift+l gaps horizontal current plus 50
    bindsym Shift+k gaps vertical current plus 50
    bindsym Shift+j gaps vertical current minus 50

    bindsym Shift+I gaps inner current plus 10
    bindsym i gaps inner current minus 10

    bindsym n gaps inner current set 0; gaps horizontal current set 0; gaps vertical current set 0
    bindsym u gaps inner current set 25; gaps horizontal current set 200; gaps vertical current set 100

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+g mode "$mode_gaps"

